#!/usr/bin/env ruby

begin 
  require 'highline'
rescue LoadError
  require 'rubygems'
  require 'highline'
end

begin
  require 'htauth'
rescue LoadError 
  path = File.expand_path(File.join(File.dirname(__FILE__),"..","lib"))
  raise if $:.include?(path)
  $: << path
  retry
end

HTAuth::CLI::Digest.new.run(ARGV, ENV)
